% wobei der Inhalt von \meta{\#1} expandiert wird.
%    \begin{macrocode}
    \def#1{}%
    \the\toks@%
    \edef\tud@reserved{%
      \noexpand\endgroup%
      \def\noexpand#1{#1}%
    }%
  \tud@reserved%
}
%    \end{macrocode}
