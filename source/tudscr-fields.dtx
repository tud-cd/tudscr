    \def\thanks##1{\listgadd\tud@res@c{##1}}%
    \let\footnote\thanks%
    \sbox\z@{#2}%
    \let\thanks\@gobble%
    \let\footnote\@gobble%
    \protected@csxdef{@@#1}{\trim@spaces{#2}}%
    \letcs\tud@res@a{@@#1}%
    \TUD@set@numkey{thesis}{@tempa}{%
      {habil}{0},
      {diss}{1},{doctoral}{1},{phd}{1},
      {diploma}{2},
      {master}{3},
      {bachelor}{4},
      {student}{5},
      {evidence}{6},
      {project}{7},
      {seminar}{8},
      {term}{9},
      {research}{10},
      {log}{11},
      {report}{12},
      {internship}{13}
    }{\tud@res@a}%
    \ifx\FamilyKeyState\FamilyKeyStateProcessed%
      \ifcase\@tempa\relax% habil
        \def\tud@res@a{\habilitationname}%
      \or% diss
        \def\tud@res@a{\dissertationname}%
      \or% diploma
        \def\tud@res@a{\diplomathesisname}%
      \or% master
