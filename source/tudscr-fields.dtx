    }{}%
    \ifcsdef{##1}{\tud@cs@restore{##1}}{}%
  }%
  \letcs\@tempb{tud@split#1@list}%
  \let\and\relax%
  \expandafter\forcsvlist\expandafter\@tempa\expandafter{\@tempb}%
}
