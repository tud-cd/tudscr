    \undef\KV@declaration@closing%
    \undef\KV@declaration@confirmationclosing%
    \ifbool{@tud@declarations}{%
      \tud@fm@blocking[#1]%
    }{%
      \begin{declarations}[#1]%
        \tud@fm@blocking%
      \end{declarations}%
    }%
  \endgroup%
}
%    \end{macrocode}
% Dies ist der eigentliche Inhalt des Befehls \cs{blocking}.
