%    \begin{macrocode}
  \newcommand*\tud@cdgeometry@@init{%
    \csuse{@ta@usegeometryfalse}%
    \tud@x@geometry@getlayout{\tud@cdgeometry@layout}%
    \tud@cs@store{tud@cdgeometry@num}%
