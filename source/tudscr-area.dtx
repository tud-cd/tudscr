            bottom=\the\dimexpr\glueexpr\tud@dim@bothmargin/2%
              +\tud@extrabottommargin@dim+\tud@dim@ddcdiff\relax\relax,%
          \fi%
          footskip=\the\dimexpr\tud@dim@headsep+\footheight%
            -1\baselineskip*5/4+\tud@dim@ddcdiff\relax,%
        }%
