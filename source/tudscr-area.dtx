    \tud@setdim\tud@dim@layoutwidth{\paperwidth}%
    \tud@setdim\tud@dim@layoutheight{\paperheight}%
    \tud@cdgeometry@set%
  }%
  \newcommand*\tud@x@geometry@fixmargins{}%
}
