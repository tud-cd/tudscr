\def\tud@sec@@@format#1[#2]#3{%
  \begingroup%
    \IfArgIsEmpty{#2}%
      {\let\tud@res@a\@firstofone}%
      {\def\tud@res@a{\usekomafont{#2}}}%
    \tud@res@a{%
      \nobreak#1\nobreak\vphantom{\textsuperscript{\tud@font@phantomglyphs}}%
    }%
  \endgroup%
  \tud@sec@@@@format{#3}%
}
\newcommand*\tud@sec@@@@format[1]{#1}
