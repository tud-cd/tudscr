    \dimexpr(\tud@sec@baselineskip@@dim)*4/5\relax
    \@plus\dimexpr(\tud@sec@baselineskip@@dim)/20\relax
    \@minus\dimexpr(\tud@sec@baselineskip@@dim)/10\relax
