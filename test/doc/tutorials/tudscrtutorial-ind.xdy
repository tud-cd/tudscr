(require "texindy.xdy")
(define-location-class
  "arabic-page-numbers" ("arabic-numbers") :min-range-length 1
)
(markup-range :sep "--")
(merge-rule "\[(.*)\]" "" :eregexp)
(markup-locclass-list :open "\,\dotfill\," :close "\relax" :sep ", ")
(define-attributes (("declare" "!" "important" "?" "default")))
(markup-locref :attr "declare"   :open "\textbf{\hyperpage{" :close "}}")
(markup-locref :attr "!"         :open "\textbf{\hyperpage{" :close "}}")
(markup-locref :attr "important" :open "\textsl{\hyperpage{" :close "}}")
(markup-locref :attr "?"         :open "\textsl{\hyperpage{" :close "}}")
(markup-locref :attr "default"   :open "\hyperpage{"         :close "}")
(markup-crossref-list :class "see"
  :open "\cleversee{"     :sep "; " :close "}"
)
(markup-crossref-list :class "seealso"
  :open "\cleverseealso{" :sep "; " :close "}"
)
(markup-crossref-layer-list :class "see"     :sep "\,\textbar\,")
(markup-crossref-layer-list :class "seealso" :sep "\,\textbar\,")
