(require "texindy.xdy")
(define-location-class
  "arabic-page-numbers" ("arabic-numbers") :min-range-length 1
)
(markup-range :sep "--")
(merge-rule "\[(.*)\]" "" :eregexp)
(markup-indexentry :open "~n        \subsubsubitem " :depth 3)
(markup-indexentry :open "~n          \subsubsubsubitem " :depth 4)
(markup-locclass-list :open "\,\dotfill{} " :close "\relax" :sep ", ")
(define-attributes (("declare" "!" "important" "?" "default")))
(markup-locref :attr "declare"   :open "\textbf{\hyperpage{" :close "}}")
(markup-locref :attr "!"         :open "\textbf{\hyperpage{" :close "}}")
(markup-locref :attr "important" :open "\textit{\hyperpage{" :close "}}")
(markup-locref :attr "?"         :open "\textit{\hyperpage{" :close "}}")
(markup-locref :attr "default"   :open "\hyperpage{"         :close "}")
(define-crossref-class "seeunverified" :unverified)
(markup-crossref-list :class "seeunverified"
  :open "\cleversee "     :close "\\" :sep "; "
)
(markup-crossref-list :class "see"
  :open "\cleversee "     :close "\\" :sep "; "
)
(markup-crossref-list :class "seealso"
  :open "\cleverseealso " :close "\\" :sep "; "
)
(define-crossref-class "seeidx" :unverified)
(markup-crossref-list :class "seeidx"
  :open "\seeidx{"        :close "}{}" :sep "; "
)
(markup-crossref-layer-list :class "see"     :sep "\,\textbar\,")
(markup-crossref-layer-list :class "seealso" :sep "\,\textbar\,")
(define-location-class-order
  (
    "see" "seealso" "seeidx" "seeunverified"
    "roman-page-numbers" "arabic-page-numbers" "alpha-page-numbers"
    "Roman-page-numbers" "Alpha-page-numbers"
  )
)
